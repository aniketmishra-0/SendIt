{
  "expo": {
    "name": "SendIt",
    "slug": "sendit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0a0e1a",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0e1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sendit.app",
      "backgroundColor": "#0a0e1a",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "SendIt needs local network access for P2P file transfers",
        "NSPhotoLibraryUsageDescription": "SendIt needs access to your photos to share them with other devices",
        "NSPhotoLibraryAddUsageDescription": "SendIt needs permission to save received photos",
        "NSCameraUsageDescription": "SendIt can use camera to take photos to share",
        "NSBonjourServices": [
          "_sendit._tcp"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0e1a"
      },
      "package": "com.sendit.app",
      "backgroundColor": "#0a0e1a",
      "navigationBarColor": "#0a0e1a",
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "backgroundColor": "#0a0e1a"
    },
    "plugins": [
      "expo-barcode-scanner",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow SendIt to access your photos to share them.",
          "savePhotosPermission": "Allow SendIt to save received photos."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SendIt to access camera for QR code scanning."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "sendit-p2p"
      }
    }
  }
}